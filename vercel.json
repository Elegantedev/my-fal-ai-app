{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    // Rewrites for API
    { "src": "/api/(.*)", "dest": "/api/$1" },
    // Example custom rewrites
    { "src": "/old-path/(.*)", "dest": "/new-path/$1" },
    { "src": "/static/(.*)", "dest": "/public/$1" }
  ]
}
